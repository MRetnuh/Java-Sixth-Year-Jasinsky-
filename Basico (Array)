public class LlenarArray {
    public static void main(String[] args) {
        // Creamos el array y lo llenamos directamente
        int[] numeros = new int[10]; // Definimos el tamaño aquí
//Tambien puedo hacer int[] numeros = {1,2,3,4,5}

        for (int i = 0; i < numeros.length; i++) {
            numeros[i] = i + 1; // Llenamos el array con los números del 1 al 10
        }

        // Imprimimos el contenido del array
        System.out.println("Contenido del array:");
        for (int numero : numeros) { //esto es un for each. Ademas, .length y el for each se utilizan con arrays
            System.out.println(numero);
        }
    }
}
